// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Conference {
  acronym     String
  title       String
  slug        String @id
  description String

  updated_at   DateTime
  aspect_ratio String

  // urls
  logo_url     String
  url          String
  schedule_url String
}

model Person {
  name             String @id
  event            Event  @relation(fields: [eventInternal_id], references: [internal_id])
  eventInternal_id String
}

model Tag {
  name             String @id
  event            Event  @relation(fields: [eventInternal_id], references: [internal_id])
  eventInternal_id String
}

model Event {
  internal_id String @id @default(cuid())

  // media.ccc.de specific fields
  // datetimes
  guid         String
  date         DateTime
  release_date DateTime
  updated_at   DateTime
  slug         String

  // meta
  title             String
  subtitle          String
  description       String
  thumb_url         String
  poster_url        String
  original_language String
  frontend_link     String

  // relations
  persons Person[]
  tags    Tag[]
}

model Settings {
  key   String @id
  value String
}
