{
   "name": "talkarr",
   "version": "0.1.0",
   "private": true,
   "scripts": {
      "dev": "ts-node-dev --respawn --transpile-only --no-notify --project backend/tsconfig.json -r tsconfig-paths/register --watch backend --ignore-watch .next backend/index.ts",
      "build:next": "next build",
      "build": "npm run build:next",
      "start": "ts-node src/index.ts",
      "lint": "next lint",
      "typecheck": "tsc --noEmit",
      "migration:generate": "ts-node -r tsconfig-paths/register --project backend/tsconfig.json ./node_modules/typeorm/cli.js migration:generate -d backend/db/index.ts",
      "migration:create": "ts-node -r tsconfig-paths/register --project backend/tsconfig.json ./node_modules/typeorm/cli.js migration:create -d backend/db/index.ts",
      "migration:run": "ts-node -r tsconfig-paths/register --project backend/tsconfig.json ./node_modules/typeorm/cli.js migration:run -d backend/db/index.ts",
      "dev:db": "docker compose -f docker-compose.dev.yml up -d",
      "db:reset": "docker compose -f docker-compose.dev.yml down -v && docker compose -f docker-compose.dev.yml up -d",
      "typeorm": "typeorm-ts-node-commonjs"
   },
   "dependencies": {
      "express": "^4.21.2",
      "next": "15.1.3",
      "pg": "^8.4.0",
      "react": "^19.0.0",
      "react-dom": "^19.0.0",
      "reflect-metadata": "^0.1.13",
      "ts-node": "^10.9.2",
      "typeorm": "0.3.20",
      "winston": "^3.17.0",
      "winston-daily-rotate-file": "^5.0.0"
   },
   "devDependencies": {
      "@eslint/eslintrc": "^3",
      "@types/express": "^5.0.0",
      "@types/node": "^20",
      "@types/react": "^19",
      "@types/react-dom": "^19",
      "eslint": "^9",
      "eslint-config-next": "15.1.3",
      "ts-node-dev": "^2.0.0",
      "typescript": "^5"
   }
}
